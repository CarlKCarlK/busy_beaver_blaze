{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Cargo Test",
            "cargo": {
                "args": [
                    "test",
                    "--lib"
                ]
            },
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "stopOnEntry": false
        }
    ]
}